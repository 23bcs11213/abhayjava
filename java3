public class TicketBookingSystem {

    // Enum for seat status
    enum SeatStatus { AVAILABLE, LOCKED, BOOKED }

    // Seat class
    static class Seat {
        int seatNumber;
        SeatStatus status;
        String lockedBy;
        long lockTime; // timestamp when locked

        Seat(int seatNumber) {
            this.seatNumber = seatNumber;
            this.status = SeatStatus.AVAILABLE;
        }
    }

