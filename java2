package com.example.cards;

import org.springframework.boot.*;
import org.springframework.boot.autoconfigure.*;
import org.springframework.web.bind.annotation.*;
import java.util.*;

// --- Model Class ---
class Card {
    private int id;
    private String suit;
    private String rank;

    public Card() {}

    public Card(int id, String suit, String rank) {
        this.id = id;
        this.suit = suit;
        this.rank = rank;
    }

    public int getId() { return id; }
    public void setId(int id) { this.id = id; }

    public String getSuit() { return suit; }
    public void setSuit(String suit) { this.suit = suit; }

    public String getRank() { return rank; }
    public void setRank(String rank) { this.rank = rank; }
}

// --- REST Controller ---
@RestController
@RequestMapping("/api/cards")
class CardController {

    private List<Card> cards = new ArrayList<>();
    private int nextId = 1;

    public CardController() {
        // Initial sample data
        cards.add(new Card(nextId++, "Hearts", "Ace"));
        cards.add(new Card(nextId++, "Spades", "King"));
    }

    // GET /api/cards -> Get all cards
    @GetMapping
    public List<Card> getAllCards() {
        return cards;
    }

    // GET /api/cards/{id} -> Get one card by ID
    @GetMapping("/{id}")
    public Card getCardById(@PathVariable int id) {
        return cards.stream()
                .filter(c -> c.getId() == id)
                .findFirst()
                .orElseThrow(() -> new RuntimeException("Card not found"));
    }

    // POST /api/cards -> Add a new card
    @PostMapping
    public Card addCard(@RequestBody
